    // Function to scroll the page to the bottom
    function autoScroll() {
        window.scrollTo({
            top: document.body.scrollHeight,
            behavior: 'smooth'
        });
    }

    // JavaScript function to simulate the login typing
    function showLoginDetails() {
        const username = '********';
        const password = '********';
        const usernameElem = document.getElementById('username');
        const passwordElem = document.getElementById('password');

        let i = 0;
        function typeUsername() {
            if (i < username.length) {
                usernameElem.textContent += username.charAt(i);
                i++;
                setTimeout(typeUsername, 60);
                autoScroll(); // Auto-scroll after each character
            } else {
                i = 0;
                typePassword();
            }
        }

        function typePassword() {
            if (i < password.length) {
                passwordElem.textContent += password.charAt(i);
                i++;
                setTimeout(typePassword, 60);
                autoScroll(); // Auto-scroll after each character
            } else {
                document.getElementById('welcomeMessage').style.display = 'block';
                autoScroll(); // Final scroll after showing the welcome message
            }
        }

        // Start typing the username
        typeUsername();
